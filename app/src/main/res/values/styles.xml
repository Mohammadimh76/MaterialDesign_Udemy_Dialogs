<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- AlertDialog Theme. -->
    <style name="AlertDialogTheme"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAlertDialog</item>
    </style>


    <!-- ConfirmationDialog Theme. -->
    <style name="ConfirmationDialogTheme"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorConfirmationDialog</item>
    </style>


    <!-- ProgressDialog Theme. -->
    <style name="ProgressDialogTheme"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorProgressDialog</item>
    </style>
    
</resources>
